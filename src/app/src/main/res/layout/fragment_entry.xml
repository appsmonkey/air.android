<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch_bg"
    >

  <include layout="@layout/progress_overlay"/>



  <Button
      android:id="@+id/btn_login"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/btn_sarajevo_air"
      android:layout_marginBottom="@dimen/space_l"
      android:layout_marginEnd="@dimen/space_xxxl"
      android:layout_marginStart="@dimen/space_xxxl"
      android:layout_marginTop="@dimen/space_l"
      android:stateListAnimator="@null"
      android:text="Log Into Device"
      android:textAllCaps="false"
      android:textColor="@color/white"
      style="@style/PrimaryButton"
      />

  <Button
      android:id="@+id/btn_sarajevo_air"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="@dimen/space_xxl"
      android:layout_marginEnd="@dimen/space_xxxl"
      android:layout_marginStart="@dimen/space_xxxl"
      android:text="View Sarajevo Air"
      android:textAllCaps="false"
      style="@style/GrayButton"
      />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/btn_login"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="0dp"
      android:layout_marginEnd="0dp"
      android:layout_marginBottom="100dp"
      app:srcCompat="@drawable/air_logo" />

</RelativeLayout>
