<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.google.android.gms.maps.MapView
      android:id="@+id/choose_coordinates_map"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <Button
      android:id="@+id/button_choose_location"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="@dimen/space_xxxl"
      android:layout_marginEnd="@dimen/space_xxxl"
      android:layout_marginStart="@dimen/space_xxxl"
      android:layout_marginTop="@dimen/space_l"
      android:stateListAnimator="@null"
      android:text="@string/choose_device_location"
      android:textAllCaps="false"
      android:textColor="@color/white"
      style="@style/PrimaryButton"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/button_choose_location"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:background="#89111111"
      android:paddingLeft="10dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:text="@string/boxy_reconnecting_message"
      android:textColor="#E8E8E8" />

</RelativeLayout>
